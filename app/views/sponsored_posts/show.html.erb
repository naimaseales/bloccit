<h1><%= @sponsored_post.name %></h1>

<%= link_to "Edit Sponsored Post", edit_sponsored_post_path, class: 'btn btn-success' %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @sponsored_post.body %></p>
    <% @sponsored_posts.each do |s_post| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to sponsored_post.name, sponsored_post %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Sponsored Post", new_sponsored_post_path(@sponsored_post), class: 'btn btn-success' %>
  </div>
</div>
