<h1>New Advertisement</h1>

<div class="row">
  <div class="col-md-4">
    <p>Sale! Sale! Sale!</p>
    <p>Add your sale items and checkout all of the low prices!</p>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
     </div>
     <div class="form-group">
       <%= f.label :body %>
       <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter ad body" %>
    </div>
    <div class="form-group">
      <%= f.label "Price" %>
      <%= f.text_field :price, class: 'form-control', placeholder: "Enter ad price" %>
   </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
</div>
